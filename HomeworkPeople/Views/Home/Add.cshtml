

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <button class="btn btn-danger" id="add-rows">Add Row</button>
            <form style="margin-top: 10px;" method="post" action="/home/addPeople">
                <div id="ppl-rows">
                    <div class="row" style="margin-bottom: 10px;">
                        <input type="hidden" value="people[0].id" name="people[0].id">
                        <div class="col-md-4">
                            <input class="form-control" type="text" name="people[0].firstname" placeholder="First Name" />
                        </div>
                        <div class="col-md-4">
                            <input class="form-control" type="text" name="people[0].lastname" placeholder="Last Name" />
                        </div>
                        <div class="col-md-4">
                            <input class="form-control" type="text" name="people[0].age" placeholder="Age" />
                        </div>
                    </div>
                </div>
                <button class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/AddRow.js"></script>
  
}